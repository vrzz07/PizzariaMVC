@model PizzariaMVC.Models.ViewModels.RequestDTO.PostPizzaDTO

@{
    ViewData["Title"] = "Atualizar Pizza";
}

<div class="row align-items-center">
    <div class="col-md-8 offset-md-4">
        <p>
            <h4>Atualizar pizza</h4>
        </p>

        <div class="">
            <div class="">
                <form asp-action="Atualizar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="row">

                        <div class="col-md-6 ">
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" type="text" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="form-group">
                                <label asp-for="TamanhoId" class="control-label"></label>
                                <select asp-for="TamanhoId" class="form-control" asp-items="ViewBag.Tamanhos"></select>
                                <span asp-validation-for="TamanhoId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="form-group">
                                <label asp-for="SaboresId" class="control-label"></label>
                                <select asp-for="SaboresId" class="form-control" asp-items="ViewBag.Sabores" multiple></select>
                                <span asp-validation-for="SaboresId" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="col-md-6  text-center">
                            <img width="100%" id="ImageUrl" />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-outline-success float-right"/>
                            <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>