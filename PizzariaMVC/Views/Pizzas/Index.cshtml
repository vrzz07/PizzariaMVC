@model IEnumerable<Pizza>

@{
    ViewData["Title"] = "Lista de Pizzas";
}

<partial name="_NewItem" model="nameof(Pizza)" />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Nome
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Detalhes" asp-route-id="@item.Id"><img src="@item.ImageURL" width="100%" alt="@item.Nome"></a>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text ">
                                <b>Situação: </b>
                                <span class="badge bg-primary text-white">Disponível</span>
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Detalhes" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-eye"></i> Detalhes
                                </a>
                                <a class="btn btn-success text-white"
                                   asp-controller="Pedidos"
                                   asp-action="AdicionarCarrinho"
                                   asp-route-id="@item.Id">
                                    <i class="fa-solid fa-cart-arrow-down"></i> Adicionar
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>