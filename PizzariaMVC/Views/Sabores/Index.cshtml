@model IEnumerable<Sabor>

<partial name="_NewItem" model="nameof(Sabor)" />

<div class="row">
    <div class="col-md-10 offset-md-1">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sabor in Model)
                {

                    <tr>
                        <td>
                            <div class="d-flex flex-column">
                                <a class="btn btn-success" asp-action="Atualizar" asp-route-id="@sabor.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Editar
                                </a>

                                <a class="btn btn-primary mt-1" asp-action="Detalhes" asp-route-id="@sabor.Id">
                                    <i class="fa-solid fa-eye"></i>
                                    Ver
                                </a>

                                <a class="btn btn-danger mt-1" asp-action="Deletar" asp-route-id="@sabor.Id">
                                    <i class="fa-solid fa-trash-can"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>
                        <td class="align-middle">
                        <td class="align-middle">@sabor.Nome</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>